rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin(condominiumId) {
      // An admin is a user who is signed in AND exists in the admins collection 
      // with the correct condominiumId.
      return isSignedIn() && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.condominiumId == condominiumId;
    }

    // --- Rules for Top-Level Collections ---

    // Healthcheck collection
    match /_healthcheck/{docId} {
      allow read: if true;
    }

    // Condominiums collection
    match /condominiums/{condominiumId} {
      // ANYONE can read the list of condominiums
      allow read: if true;

      // ONLY an admin for that specific condo can modify it (Enter the Office)
      allow write: if isAdmin(condominiumId);

      // --- Rules for Sub-Collections ---
      // For any sub-collection within a condominium...
      match /{subcollection}/{documentId} {
        // A user must be signed-in to read any data from within a condominium.
        allow read: if true;

        // And only an admin can write data.
        allow write: if isAdmin(condominiumId);
      }
    }

    // Admins collection
    match /admins/{adminId} {
      // Users can only view and manage their own admin status.
      allow read, write: if isSignedIn() && request.auth.uid == adminId;
    }
  }
}