rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin(condominioId) {
      // An admin is a user who is signed in AND exists in the admins collection 
      // with the correct condominiumId.
      return isSignedIn() && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.condominioId == condominioId;
    }

    // --- Rules for Top-Level Collections ---

    // Healthcheck collection
    match /_healthcheck/{docId} {
      allow read: if true;
    }

    // Condominiums collection
    match /condominiums/{condominiumId} {
      allow get: if true;
      allow list: if true;
      allow write: if isSignedIn();

      // --- Rules for Sub-Collections ---
      match /{subcollection}/{documentId} {
        allow read, write: if isSignedIn();
      }
    }

    // Movimientos collection
    match /movimientos/{movimientoId} {
      allow read, write: if isSignedIn();
    }

    // Admins collection
    match /admins/{adminId} {
      // Users can only view and manage their own admin status.
      allow read, write: if isSignedIn() && request.auth.uid == adminId;
    }
  }
}